<h1>Logs do Animal: <%= @pet.name %></h1>

<% if @pet.logs.any? %>
  <ul>
    <% @pet.logs.each do |log| %>
      <li>
        <strong>Data:</strong> <%= log.created_at.strftime('%d/%m/%Y %H:%M') %><br>
        <strong>Conteúdo:</strong> <%= log.content %><br>
        <%= link_to 'Ver Detalhes', shelter_pet_log_path(@shelter, @pet, log) %>
        <%= link_to 'Editar', edit_shelter_pet_log_path(@shelter, @pet, log) if log.created_by == current_user %>
        <%= link_to 'Excluir', shelter_pet_log_path(@shelter, @pet, log), method: :delete, data: { confirm: 'Tem certeza?' } if log.created_by == current_user %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>Não há logs registrados para este animal.</p>
<% end %>

<%= link_to 'Novo Log', new_shelter_pet_log_path(@shelter, @pet) %>
<%= link_to 'Voltar para Animais', shelter_pets_path(@shelter) %>
