<h2>Animais do Abrigo <%= @shelter.name %></h2>

<% if pets.present? && pets.any? %>
  <ul>
    <% pets.each do |pet| %>
      <li>
        <%= link_to pet.name, shelter_pet_path(@shelter, pet) %>
        <p><%= truncate(pet.description, length: 100) %></p>
        <% if current_user.role == 'gestor' %>
          <%= link_to 'Editar', edit_shelter_pet_path(@shelter, pet), class: 'btn btn-warning' %>
          <%= link_to 'Excluir', shelter_pet_path(@shelter, pet), method: :delete, data: { confirm: 'Tem certeza que deseja excluir este animal?' }, class: 'btn btn-danger' %>
        <% end %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>Nenhum animal encontrado.</p>
<% end %>
